	name = Adam Pohorecki
	email = adam@pohorecki.pl
[color]
	ui = auto
[fetch]
	recursesubmodules = true
[github]
	user = psyho
[diff]
	tool = vimdiff
[push]
	default = simple
[core]
	excludesfile = /home/psyho/.gitignore_global
